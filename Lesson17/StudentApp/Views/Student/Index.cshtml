@using Microsoft.AspNetCore.Mvc.TagHelpers
@using StudentApp.Students
@model List<StudentViewModel>

@{
    ViewData["Title"] = "Students";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-primary">Student List</h1>
        <a href="/Student/Create" class="btn btn-success">Create a Student</a>
    </div>

    <table class="table table-hover table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Score</th>
                <th colspan="2" class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.Id</td>
                    <td>@student.Name</td>
                    <td>@student.Score</td>
                    <td class="text-center">
                        <a class="btn btn-sm btn-primary" href="/Student/Update?id=@student.Id">
                            <i class="fas fa-edit"></i> Update
                        </a>
                    </td>
                    <td class="text-center">
                        <form action="/Student/Delete?id=@student.Id" method="post" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-danger">
                                <i class="fas fa-trash-alt"></i> Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Optional: Add Font Awesome CDN for icons -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />
