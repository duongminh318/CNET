@using BookApp.Services.Books
@using Microsoft.AspNetCore.Mvc.TagHelpers

@model List<BookApp.Services.Authors.AuthorViewModel>

@{
    ViewData["Title"] = "Create a Book";
}

<h1 class="bg-info text-white">Create a Book</h1>
<a asp-action="Index" class="btn btn-secondary">View all Movies</a>



<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label>Book Name</label>
        <input type="text" name="@nameof(CreateBookViewModel.Name)" class="form-control" />
        
    </div>
    <div class="form-group">
        <label>Choose the author</label>
        <select name="@nameof(CreateBookViewModel.AuthorId)">
            @foreach (var item in Model)
            {
                <option value="@item.Id">@item.Name</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>