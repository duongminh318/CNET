

@using Microsoft.AspNetCore.Mvc.TagHelpers
@model List<BookApp.Services.Books.BookViewModel>

@{
    ViewData["Title"] = "Books";
}

<h1 class="bg-info text-white">Books</h1>
<a href="/Book/Create" class="btn btn-secondary">Create a Book</a>

<table class="table table-sm table-bordered">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Author</th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var book in Model)
    {
        <tr>
            <td>@book.Id</td>
            <td>@book.Name</td>
            <td>@book.AuthorName</td>
            <td>
                <a class="btn btn-sm btn-primary" href="/Book/Update?id=@book.Id">
                    Update
                </a>
            </td>
            <td>
                <form action="/Book/Delete?id=@book.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>