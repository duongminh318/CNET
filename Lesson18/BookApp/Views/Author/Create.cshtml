@using Microsoft.AspNetCore.Mvc.TagHelpers
@model BookApp.Services.Authors.CreateAuthorViewModel

@{
    ViewData["Title"] = "Create a Author";
}

<h1 class="bg-info text-white">Create a Author</h1>
<a asp-action="Index" class="btn btn-secondary">View all Authors</a>

<div asp-validation-summary="All" class="text-danger"></div>

@* <form method="post" enctype="multipart/form-data"> *@
<form method="post" action="/author/create">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
   
    <button type="submit" class="btn btn-primary">Create</button>
</form>